{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "window/src/*"
      ],
      "@services/*": [
        "services/*"
      ]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true
  },
  "include": [
    "main/**/*.ts",
    "window/**/*.ts",
    "window/**/*.tsx",
    "services/**/*.ts",
    "function/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
